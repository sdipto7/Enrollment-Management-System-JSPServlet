<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>net.therap.enrollmentmanagement.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/loginForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>net.therap.enrollmentmanagement.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/LogoutButton</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>net.therap.enrollmentmanagement.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>course</servlet-name>
        <servlet-class>net.therap.enrollmentmanagement.servlets.CourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>course</servlet-name>
        <url-pattern>/viewCourseButton</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>course</servlet-name>
        <url-pattern>/addCourseButton</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>course</servlet-name>
        <url-pattern>/addCourse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>course</servlet-name>
        <url-pattern>/updateCourseLink</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>course</servlet-name>
        <url-pattern>/updateCourse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>course</servlet-name>
        <url-pattern>/deleteCourse</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>net.therap.enrollmentmanagement.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/viewUserButton</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/addUserButton</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/updateUserLink</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/updateUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>enrollment</servlet-name>
        <servlet-class>net.therap.enrollmentmanagement.servlets.EnrollmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>enrollment</servlet-name>
        <url-pattern>/viewEnrollmentButton</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>enrollment</servlet-name>
        <url-pattern>/addEnrollmentButton</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>enrollment</servlet-name>
        <url-pattern>/addEnrollment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>enrollment</servlet-name>
        <url-pattern>/updateEnrollmentLink</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>enrollment</servlet-name>
        <url-pattern>/updateEnrollment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>enrollment</servlet-name>
        <url-pattern>/deleteEnrollment</url-pattern>
    </servlet-mapping>

</web-app>